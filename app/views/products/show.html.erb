<article class="one-product">

  <div class="index-transbox">
    <a href="/products/<%= product.id %> ">
        <img class="display-one" src="<%= product.photo_url %>" />
    </a>
  </div>

  <div class="prod-desc">
  <section class="name"><h3><%= product.name %></h3></section>
  <p class="price-display">Price<p><%= "$#{product.discount}" %>
    <% if product.discount %>
      <%= " - 10% off original price" if product.condition == 'good' %>
      <%= " - 20% off original price" if product.condition == 'average' %>
      <% else product.price %>
    <% end %></p>
    <p class="condition-display">Condition<p><%= "#{product.condition}" %></p>
    <p><%= product.category.name %></p>

        <p><%= "#{product.quantity} left!" %></p>
      </div>
    </a>
</article>
