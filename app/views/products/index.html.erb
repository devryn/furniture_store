<div id="header">
  Mallory Furniture</div>

<% product.each do |product| %>
  <header>
    <h3><a href="/products/<%= product.id %>"><%= product.name %></a></h3>
    <p><%= "$#{product.discount}" %>
      <% if product.discount %>
        <%= " - 10% off original price" if product.condition == 'good' %>
        <%= " - 20% off original price" if product.condition == 'average' %>
      <% end %></p>
    </header>

<% end %>
