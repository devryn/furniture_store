<% category.products.each do |product| %>
  <section class='all-products'>
    <header>
      <h3>
        <a href="/products/<%= product.id %>">
      <%= product.name %></a>
      </h3>
    </header>

    <div class="index-transbox">
      <a href="/products/<%= product.id %> ">
          <img class="display-all" src="<%= product.photo_url %>" />
      </a>
    </div>

    <p class='body'><%= "$#{product.discount}" %>
      <%= " - #{product.discount_amount}% off original price"%>
    </p>
    <p class="catname"> <%= product.category.name %></p>

    <a href="/categories" class='infobutton'><h4>More Info</h4></a>
  </form>
  </section>


<% end %>


